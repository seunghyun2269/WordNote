<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/text1"
    android:text="단어 1"
    android:textSize="20dp"
    android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/word1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/text2"
        android:text="단어 1 뜻"
        android:textSize="20dp"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/meaning1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/text3"
        android:text="단어 2"
        android:textSize="20dp"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/word2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/text4"
        android:text="단어 2 뜻"
        android:textSize="20dp"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/meaning2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/text5"
        android:text="단어 3"
        android:textSize="20dp"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/word3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/text6"
        android:text="단어 3 뜻"
        android:textSize="20dp"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/meaning3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

</LinearLayout>